@model Lifvs.Common.ApiModels.AddStoreModel
@{
    ViewBag.Title = "AddStore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddStore", "Stores", FormMethod.Post, new { @id = "frmAddStore" }))
{
    <div class="row justify-content-md-center">

        <div class="col-sm-4">

            <div class="form-group row">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Name, new { @placeholder = "Store Name", @class = "form-control " })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.Name)</span>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email Address", @class = "form-control" })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Phone, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-2">
                    @Html.Label("+46", new { @class = "form-control" })
                </div>
                <div class="col-sm-6" style="padding-left:0;">
                    @Html.TextBoxFor(m => m.Phone, new { @placeholder = "Phone Number", @class = "form-control", @maxlength = "12" })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.Phone)</span>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Address, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(m => m.Address, 3, 3, new { @placeholder = "Address", @class = "form-control" })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.Address)</span>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.City, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.City, new { @placeholder = "City", @class = "form-control" })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.City)</span>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.PostalCode, new { @class = "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.PostalCode, new { @placeholder = "Postal Code", @class = "form-control" })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.PostalCode)</span>
                </div>
            </div>
            @*<div class="form-group row">
                    <label class="col-sm-4 col-form-label">Internal Number</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.InternalNumber, new { @placeholder = "Internal Number", @class = "form-control" })
                    </div>
                </div>*@
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Supervisor Name</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.SupervisorName, new { @placeholder = "Supervisor Name", @class = "form-control" })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.SupervisorName)</span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Store Number</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.StoreNumber, new { @placeholder = "Store Number", @class = "form-control" })
                </div>
            </div>
            @*<div class="form-group row">
                <label class="col-sm-4 col-form-label">QR Code</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.QRCode, new { @placeholder = "QR Code", @class = "form-control" })
                    <span style="color:red;">@Html.ValidationMessageFor(m => m.QRCode)</span>
                </div>
            </div>*@
            @*<div class="form-group row">
                    @Html.LabelFor(m => m.Rating, new { @class = "col-sm-4 col-from-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Rating, new { @min = 0, @max = 5, @step = 0.5, @mode = "bg",@readonly=true })
                        <div class="rateit" data-rateit-backingfld="#Rating"></div>
                    </div>
                </div>*@

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">&nbsp;</label>
                <div class="col-sm-8">
                    <input type="submit" class="btn btn-primary" name="btnAdd" value="Save" />
                    <button type="button" class="btn btn-primary" name="btnBack" value="Request" onclick="window.location.href='@Url.Action("Index","Stores")'">Back</button>
                </div>
            </div>

        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $("#rateit-reset-2").css('display', 'none');
    });

    
</script>
