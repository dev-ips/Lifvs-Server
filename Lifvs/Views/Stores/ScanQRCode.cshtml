@model Lifvs.Common.ApiModels.ScanStoreModel
@{
    ViewBag.Title = "Scan QR Code";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ScanQRCode", "Stores", FormMethod.Post, new { @id = "frmScanCode" }))
{
    <div class="row justify-content-md-center">

        <div class="col-sm-4">

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">QR Code</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.QRCode, new { @placeholder = "QR Code", @class = "form-control " })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">&nbsp;</label>
                <div class="col-sm-8">
                    <input type="submit" class="btn btn-primary" name="btnAdd" value="Save" />
                    <button type="button" class="btn btn-primary" name="btnBack" value="Request" onclick="window.location.href='@Url.Action("Index","Stores")'">Back</button>
                </div>
            </div>
            @if (ViewBag.QRCodeImage != null)
            {
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">&nbsp;</label>
                    <div class="col-sm-8">
                        <img src="@ViewBag.QRCodeImage" alt="" style="height:150px;width:150px" />
                    </div>
                </div>
            }
        </div>
    </div>
}

